#include<stdio.h>
#include<time.h>
#include<stdlib.h>
#include<windows.h>

int main()
{
	int b=0, c=0, d, e=3, f=0;
	srand(time(NULL)); //임의의 숫자가 들어있는 통 흔들기  
	int a;

while(f<1){	
	
	while(b<e){
		
		a=rand()%9+1; //임의의 숫자를 꺼내어 1~9 사이의 숫자   
	
		printf("%d", a);
		printf("\n"); 
		b=b+1;
		c=c+a;
		
		Sleep(500);
		system("cls");
		Sleep(500);
	}
	
	printf("각 숫자의 합은? : ");
	scanf("%d", &d);
	
	if(d==c){
		printf("\n");
		printf("정답입니다");
		Sleep(1000);
		e=e+1;
		b=0;
		c=0;
		system("cls");
		Sleep(1000);
		
	}
	else {
		printf("\n");
		printf("오답입니다");
		f=f+1;
	
	}
	
}
 
return 0;
}
